# Using built on Maven image to build the application

FROM eclipse-temurin:17-jdk
ARG APP_VERSION=dev
ENV APP_VERSION=${APP_VERSION}
ENV SPRING_PROFILES_ACTIVE=demo

WORKDIR /app
COPY target/cvtcaptcha-${APP_VERSION}.jar cvtcaptcha.jar
COPY jvm-options.txt jvm-options.txt

# Healthcheck
HEALTHCHECK --interval=1m --timeout=3s --start-period=15s --retries=3 \
  CMD curl -f http://localhost:8080/actuator/health || exit 1

EXPOSE 8080
ENTRYPOINT ["sh", "-c", "java @jvm-options.txt -Dspring.profiles.active=$SPRING_PROFILES_ACTIVE -jar cvtcaptcha.jar"]